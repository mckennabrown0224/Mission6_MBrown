@{
    ViewData["Title"] = "Add a Movie";
}
@model NewMovie

<div class="text-center">
    <h1 class="display-4">Add a Movie</h1>
</div>

@*Form to add new movie information*@
<h1>New Movie Information</h1>

<form method="post">
    @*Category entry with validation*@
    <label asp-for="Category">Category:</label>
    <input asp-for="Category"/>
    <span asp-validation-for="Category" class="text-danger"></span>
    <br/>

    @*Title entry with validation*@
    <label asp-for="Title">Title:</label>
    <input asp-for="Title"/>
    <span asp-validation-for="Title" class="text-danger"></span>
    <br/>

    @*Year entry with validation*@
    <label asp-for="Year">Year:</label>
    <input asp-for="Year"/>
    <span asp-validation-for="Year" class="text-danger"></span>
    <br/>

    @*Director entry with validation*@
    <label asp-for="Director">Director:</label>
    <input asp-for="Director"/>
    <span asp-validation-for="Director" class="text-danger"></span>
    <br/>

    @*Rating entry with validation*@
    <label asp-for="Rating">Rating:</label>
    <select asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG13">PG13</option>
        <option value="R">R</option>
    </select>
    <span asp-validation-for="Rating" class="text-danger"></span>
    <br/>

    @*Edited entry without validation (since it's not required)*@
    <label asp-for="Edited">Edited:</label>
    <select asp-for="Edited">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br/>

    @*Lent to entry without validation (since it's not required)*@
    <label asp-for="LentTo">Lent To:</label>
    <input asp-for="LentTo">
    <br/>

    @*Notes entry with validation (for length verification)*@
    <label asp-for="Notes">Notes:</label>
    <textarea asp-for="Notes" maxlength="25"></textarea>
    <span asp-validation-for="Notes" class="text-danger"></span>
    <br/>

    @*Submit button*@
    <button type="submit">Submit New Movie Information</button>
</form>
