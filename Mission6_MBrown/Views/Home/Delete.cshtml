@model Movie

@*page confirming deletion before the deletion is finalized*@
<h2>Are you sure you want to delete this movie?</h2>
<h3>@Model.Title</h3>
<form method="post">
    @*gets the applicationId s that the form knows which entry to delete*@
    <input type="hidden" asp-for="MovieId"/>
    <button type="submit">Delete</button>
    <a class="btn btn-info" asp-controller="Home" asp-action="MovieList">Cancel</a>
</form>